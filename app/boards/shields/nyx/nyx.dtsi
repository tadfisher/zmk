#include <dt-bindings/zmk/matrix_transform.h>

/ {
	chosen {
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <14>;
		rows = <5>;
// | S7  | S6  | S5  | S4  | S3  | S2  | S1  |   | S1  | S2  | S3  | S4  | S5  | S6  | S7  |
// | S14 | S13 | S12 | S11 | S10 | S9  | S8  |   | S8  | S9  | S10 | S11 | S12 | S13 | S14 |
// | S21 | S20 | S19 | S18 | S17 | S16 | S15 |   | S15 | S16 | S17 | S18 | S19 | S20 | S21 |
// | S28 | S27 | S26 | S25 | S24 | S23 | S22 |   | S22 | S23 | S24 | S25 | S26 | S27 | S28 |
//                   | S32 | S31 | S30 | S29 |   | S29 | S30 | S31 | S32 |
		map = <
RC(0,6) RC(0,5) RC(0,4) RC(0,3) RC(0,2) RC(0,1) RC(0,0)         RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11) RC(0,12) RC(0,13)
RC(1,6) RC(1,5) RC(1,4) RC(1,3) RC(1,2) RC(1,1) RC(1,0)         RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11) RC(1,12) RC(1,13)
RC(2,6) RC(2,5) RC(2,4) RC(2,3) RC(2,2) RC(2,1) RC(2,0)         RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,12) RC(2,13)
RC(3,6) RC(3,5) RC(3,4) RC(3,3) RC(3,2) RC(3,1) RC(3,0)         RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11) RC(3,12) RC(3,13)
                        RC(4,3) RC(4,2) RC(4,1) RC(4,0)         RC(4,7) RC(4,8) RC(4,9) RC(4,10)
		>;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		label = "KSCAN";

		diode-direction = "col2row";
		row-gpios
			= <&pro_micro_a 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row0
			, <&pro_micro_a 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row1
			, <&pro_micro_a 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row2
			, <&pro_micro_a 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row3
            , <&pro_micro_d 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row4
			;

	};
};
